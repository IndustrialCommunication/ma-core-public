<assembly xmlns="http://maven.apache.org/plugins/maven-assembly-plugin/assembly/1.1.2" xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
    xsi:schemaLocation="http://maven.apache.org/plugins/maven-assembly-plugin/assembly/1.1.2 http://maven.apache.org/xsd/assembly-1.1.2.xsd">
    <id>windows</id>
    <formats>
        <format>jar</format>
    </formats>
    <includeBaseDirectory>false</includeBaseDirectory>
    <dependencySets>
        <dependencySet>
            <unpack>true</unpack>
            <scope>runtime</scope>
            <includes>
                <include>com.infiniteautomation.mango:ma-bootstrap</include>
            </includes>
            <unpackOptions>
                <includes>
                    <include>com/infiniteautomation/mango/bootstrap/windows/**</include>
                </includes>
            </unpackOptions>
        </dependencySet>
        <dependencySet>
            <unpack>true</unpack>
            <scope>runtime</scope>
            <includes>
                <include>net.java.dev.jna</include>
            </includes>
            <unpackOptions>
                <includes>
                    <include>com/sun/jna/*.class</include>
                    <include>com/sun/jna/internal/**</include>
                    <include>com/sun/jna/ptr/**</include>
                    <include>com/sun/jna/win32/**</include>
                    <include>com/sun/jna/win32-x86/**</include>
                    <include>com/sun/jna/win32-x86-64/**</include>
                    <include>com/sun/jna/platform/win32/*.class</include>
                </includes>
            </unpackOptions>
        </dependencySet>
    </dependencySets>
</assembly>
