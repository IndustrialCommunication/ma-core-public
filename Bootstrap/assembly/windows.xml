<assembly xmlns="http://maven.apache.org/plugins/maven-assembly-plugin/assembly/1.1.2" xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
    xsi:schemaLocation="http://maven.apache.org/plugins/maven-assembly-plugin/assembly/1.1.2 http://maven.apache.org/xsd/assembly-1.1.2.xsd">
    <id>windows</id>
    <formats>
        <format>jar</format>
    </formats>
    <includeBaseDirectory>false</includeBaseDirectory>
    <dependencySets>
        <dependencySet>
            <unpack>true</unpack>
            <scope>runtime</scope>
            <excludes>
                <exclude>com.infiniteautomation.mango:ma-bootstrap</exclude>
            </excludes>
        </dependencySet>
        <dependencySet>
            <unpack>true</unpack>
            <scope>runtime</scope>
            <includes>
                <include>com.infiniteautomation.mango:ma-bootstrap</include>
            </includes>
            <unpackOptions>
                <includes>
                    <include>com/infiniteautomation/mango/bootstrap/**</include>
                </includes>
                <excludes>
                    <exclude>com/infiniteautomation/mango/bootstrap/windows/stage2/**</exclude>
                </excludes>
            </unpackOptions>
        </dependencySet>
        <dependencySet>
            <unpack>true</unpack>
            <scope>runtime</scope>
            <outputDirectory>stage2</outputDirectory>
            <includes>
                <include>com.infiniteautomation.mango:ma-bootstrap</include>
            </includes>
            <unpackOptions>
                <includes>
                    <include>com/infiniteautomation/mango/bootstrap/windows/stage2/**</include>
                </includes>
            </unpackOptions>
        </dependencySet>
    </dependencySets>
</assembly>
