<project xmlns="http://maven.apache.org/POM/4.0.0" xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
  xsi:schemaLocation="http://maven.apache.org/POM/4.0.0 http://maven.apache.org/xsd/maven-4.0.0.xsd">
  <modelVersion>4.0.0</modelVersion>
  <parent>
    <groupId>com.infiniteautomation.mango</groupId>
    <artifactId>mango-parent</artifactId>
    <version>2.6.0</version>
    <relativePath>../pom.xml</relativePath>
  </parent>
  <artifactId>modules-parent</artifactId>
  <packaging>pom</packaging>
  <name>Mango Modules</name>
  <properties>
    <moduleName>${project.artifactId}</moduleName>
    <descriptionKey>${project.artifactId}.description</descriptionKey>
    <zipAssemblyName>m2m2-${project.artifactId}-${noSnapshotVer}</zipAssemblyName>
  </properties>
  <build>
    <sourceDirectory>src</sourceDirectory>
    <testSourceDirectory>test</testSourceDirectory>
    <resources>
      <resource>
        <directory>resources</directory>
        <filtering>true</filtering>
        <includes>
          <include>META-INF/module.properties</include>
        </includes>
      </resource>
    </resources>
    <pluginManagement>
        <plugins>
          <plugin>
            <artifactId>maven-assembly-plugin</artifactId>
            <executions>
              <execution>
                <id>module-zip</id>
                <phase>package</phase>
                <goals>
                  <goal>single</goal>
                </goals>
                <configuration>
                  <descriptorRefs>
                    <descriptorRef>moduleZipAssembly</descriptorRef>
                  </descriptorRefs>
                  <finalName>${zipAssemblyName}</finalName>
                  <appendAssemblyId>false</appendAssemblyId>
                </configuration>
              </execution>
            </executions>
          </plugin>
          <plugin>
            <groupId>org.codehaus.gmavenplus</groupId>
            <artifactId>gmavenplus-plugin</artifactId>
            <version>1.5</version>
            <executions>
                <execution>
                    <phase>process-classes</phase>
                    <goals>
                        <goal>execute</goal>
                    </goals>
                    <configuration>
                        <scripts>
                            <script><![CDATA[
new org.reflections.Reflections("com.serotonin.m2m2.module")
    .merge(new org.reflections.Reflections(new File(project.build.outputDirectory).toURI().toURL()))
    .save(project.build.outputDirectory + "/META-INF/reflections/" +
        project.properties['moduleName'] + "-reflections.xml")
                            ]]></script>
                        </scripts>
                    </configuration>
                </execution>
            </executions>
            <dependencies>
                <dependency>
                    <groupId>org.reflections</groupId>
                    <artifactId>reflections</artifactId>
                    <version>0.9.10</version>
                </dependency>
                <dependency>
                    <groupId>org.codehaus.groovy</groupId>
                    <artifactId>groovy-all</artifactId>
                    <version>2.4.3</version>
                    <scope>runtime</scope>
                </dependency>
            </dependencies>
          </plugin>
          <plugin>
            <artifactId>maven-antrun-plugin</artifactId>
            <version>1.8</version>
            <executions>
              <execution>
                <phase>install</phase>
                <goals>
                  <goal>run</goal>
                </goals>
                <configuration>
                  <target name="install-module-zip">
                    <taskdef resource="net/sf/antcontrib/antlib.xml" classpathref="maven.plugin.classpath" />
                    <property environment="env"/>
                    
                    <if><and>
                      <not><isset property="core.target" /></not>
                      <isset property="env.MA_HOME" />
                    </and><then>
                      <property name="core.target" value="${env.MA_HOME}" />
                    </then>
                    </if>
                    
                    <if><isset property="core.target" /><then>
                      <copy file="${project.build.directory}/${zipAssemblyName}.zip"
                          todir="${core.target}/web/modules/" />
                    </then></if>
                  </target>
                </configuration>
              </execution>
            </executions>
            <dependencies>
              <dependency>
                <groupId>ant-contrib</groupId>
                <artifactId>ant-contrib</artifactId>
                <version>1.0b3</version>
                <exclusions>
                  <exclusion>
                    <groupId>ant</groupId>
                    <artifactId>ant</artifactId>
                  </exclusion>
                </exclusions>
              </dependency>
            </dependencies>
          </plugin>
          <plugin>
            <artifactId>maven-war-plugin</artifactId>
            <executions>
              <execution>
                <id>unpack-core-jsps</id>
                <goals>
                  <goal>exploded</goal>
                </goals>
                <phase>generate-resources</phase>
                <configuration>
                  <warSourceDirectory>web</warSourceDirectory>
                  <webappDirectory>${project.build.directory}/web/modules/${moduleName}/web/</webappDirectory>
                  <overlays>
                    <overlay>
                      <groupId>com.infiniteautomation</groupId>
                      <artifactId>mango</artifactId>
                      <classifier>web</classifier>
                      <targetPath>../../../</targetPath>
                    </overlay>
                  </overlays>
                </configuration>
              </execution>
            </executions>
          </plugin>
          <plugin>
            <groupId>org.eclipse.jetty</groupId>
            <artifactId>jetty-jspc-maven-plugin</artifactId>
            <version>${jettyVersion}</version>
            <executions>
              <execution>
                <id>compile-jsp</id>
                <phase>prepare-package</phase>
                <goals>
                  <goal>jspc</goal>
                </goals>
                <configuration>
                  <webAppSourceDirectory>${project.build.directory}/web/</webAppSourceDirectory>
                  <webXml>${project.build.directory}/web/WEB-INF/web.xml</webXml>
                  <webXmlFragment>${project.build.directory}/web/WEB-INF/web-fragment.xml</webXmlFragment>
                  <includes>**/*.jsp, **/*.jspf</includes>
                  <excludes>WEB-INF/**</excludes>
                  <mergeFragment>false</mergeFragment>
                  <keepSources>true</keepSources>
                  <generatedClasses>${project.build.directory}/work</generatedClasses>
                </configuration>
              </execution>
            </executions>
            <dependencies>
              <dependency>
                <groupId>com.infiniteautomation</groupId>
                <artifactId>mango</artifactId>
                <version>${project.parent.version}</version>
              </dependency>
            </dependencies>
          </plugin>
        </plugins>
    </pluginManagement>
  </build>
  <dependencies>
    <dependency>
      <groupId>com.infiniteautomation</groupId>
      <artifactId>mango</artifactId>
      <version>${project.parent.version}</version>
      <scope>provided</scope>
    </dependency>
    <dependency>
      <groupId>com.infiniteautomation</groupId>
      <artifactId>mango</artifactId>
      <version>${project.parent.version}</version>
      <classifier>web</classifier>
      <type>war</type>
      <scope>provided</scope>
    </dependency>
  </dependencies>
</project>
