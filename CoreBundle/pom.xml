<project xmlns="http://maven.apache.org/POM/4.0.0" xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance" xsi:schemaLocation="http://maven.apache.org/POM/4.0.0 http://maven.apache.org/xsd/maven-4.0.0.xsd">
	<parent>
	  <groupId>com.infiniteautomation.mango</groupId>
	  <artifactId>mango-parent</artifactId>
	  <version>3.0.3-SNAPSHOT</version>
	  <relativePath>../pom.xml</relativePath>
	</parent>
	<modelVersion>4.0.0</modelVersion>
	<artifactId>mango-bundle</artifactId>
  	<version>3.0.3-SNAPSHOT</version>
	<name>Mango Core Release Bundle</name>
	<packaging>pom</packaging>
	<properties>
	</properties>
	<repositories>
	</repositories>
	<build>
		<resources>
			<resource>
				<directory>resources</directory>
				<filtering>true</filtering>
				<targetPath>${project.build.directory}/m2m2-core-${project.parent.version}</targetPath>
			</resource>
		</resources>
        <plugins>
            <plugin>
                <groupId>org.codehaus.mojo</groupId>
                <artifactId>buildnumber-maven-plugin</artifactId>
                <version>1.4</version>
                <executions>
                    <execution>
                        <phase>generate-resources</phase>
                        <goals>
                            <goal>create</goal>
                        </goals>
                    </execution>
                </executions>
                <configuration>
                <doCheck>false</doCheck>
                <doUpdate>false</doUpdate>
                <format>{0}</format>
                <items><item>buildNumber</item></items>
                </configuration>
          </plugin>
          <plugin>
            <artifactId>maven-assembly-plugin</artifactId>
            <executions>
              <execution>
                <id>full-core-zip</id>
                <phase>package</phase>
                <goals>
                  <goal>single</goal>
                </goals>
                <configuration>
                  <descriptorRefs>
                    <descriptorRef>fullCoreZipAssembly</descriptorRef>
                  </descriptorRefs>
                  <finalName>m2m2-core-${project.parent.version}</finalName>
                  <appendAssemblyId>false</appendAssemblyId>
                </configuration>
              </execution>
            </executions>
          </plugin>
          <plugin>
            <groupId>org.eclipse.jetty</groupId>
            <artifactId>jetty-jspc-maven-plugin</artifactId>
            <version>${jettyVersion}</version>
            <executions>
              <execution>
                <id>compile-jsp</id>
                <phase>prepare-package</phase>
                <goals>
                  <goal>jspc</goal>
                </goals>
                <configuration>
                  <webAppSourceDirectory>${MA_HOME}/web</webAppSourceDirectory>
                  <webXml>${MA_HOME}/web/WEB-INF/web.xml</webXml>
                  <webXmlFragment>${project.build.directory}/web-fragment.xml</webXmlFragment>
                  <includes>**/*.jsp, **/*.jspf</includes>
                  <excludes>modules/**</excludes>
                  <mergeFragment>false</mergeFragment>
                  <keepSources>true</keepSources>
                  <generatedClasses>${project.build.directory}/work</generatedClasses>
                  <targetVersion>${compilerTargetVersion}</targetVersion>
                  <sourceVersion>${compilerSourceVersion}</sourceVersion>
                </configuration>
              </execution>
            </executions>
            <dependencies>
              <dependency>
                <groupId>org.eclipse.jetty</groupId>
                <artifactId>apache-jsp</artifactId>
                <version>${jettyVersion}</version>
              </dependency>
              <dependency>
                <groupId>com.infiniteautomation</groupId>
                <artifactId>mango</artifactId>
                <version>${project.parent.version}</version>
              </dependency>
            </dependencies>
          </plugin>
         </plugins>
	</build>
	<dependencies>
		<dependency>
			<groupId>com.infiniteautomation</groupId>
			<artifactId>mango</artifactId>
			<version>${project.parent.version}</version>
		</dependency>
		<dependency>
			<groupId>com.infiniteautomation.mango</groupId>
			<artifactId>ma-priv</artifactId>
			<version>3.0.3-SNAPSHOT</version>
		</dependency>
		<!-- ma-modules-public -->
		<dependency>
			<groupId>com.infiniteautomation.mango</groupId>
			<artifactId>ascii-ds</artifactId>
			<version>3.0.2-SNAPSHOT</version>
			<type>zip</type>	
		</dependency>
		<dependency>
			<groupId>com.infiniteautomation.mango</groupId>
			<artifactId>mango-api</artifactId>
			<version>3.0.2-SNAPSHOT</version>
			<type>zip</type>	
		</dependency>
	</dependencies>
</project>
