<assembly xmlns="http://maven.apache.org/plugins/maven-assembly-plugin/assembly/1.1.2" xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
    xsi:schemaLocation="http://maven.apache.org/plugins/maven-assembly-plugin/assembly/1.1.2 http://maven.apache.org/xsd/assembly-1.1.2.xsd">
    <id>windows</id>
    <formats>
        <format>jar</format>
    </formats>
    <includeBaseDirectory>false</includeBaseDirectory>
    <dependencySets>
        <dependencySet>
            <unpack>true</unpack>
            <scope>runtime</scope>
            <includes>
                <include>com.infiniteautomation.mango:ma-bootstrap</include>
            </includes>
        </dependencySet>
    </dependencySets>
    <fileSets>
        <fileSet>
            <directory>${project.build.outputDirectory}</directory>
            <outputDirectory></outputDirectory>
            <includes>
                <include>com/infiniteautomation/mango/windowsservice/**</include>
            </includes>
            <excludes>
                <exclude>com/infiniteautomation/mango/windowsservice/stage2/**</exclude>
            </excludes>
        </fileSet>
        <fileSet>
            <directory>${project.build.directory}</directory>
            <outputDirectory>com/infiniteautomation/mango/windowsservice</outputDirectory>
            <includes>
                <include>stage2.jar</include>
            </includes>
        </fileSet>
    </fileSets>
</assembly>
