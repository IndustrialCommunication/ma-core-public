<assembly
        xmlns="http://maven.apache.org/plugins/maven-assembly-plugin/assembly/1.1.2"
        xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
        xsi:schemaLocation="http://maven.apache.org/plugins/maven-assembly-plugin/assembly/1.1.2 http://maven.apache.org/xsd/assembly-1.1.2.xsd">
    <id>core-bundle</id>
    <formats>
        <format>zip</format>
    </formats>
    <includeBaseDirectory>false</includeBaseDirectory>
    <dependencySets>
        <dependencySet>
            <!-- lib Folder -->
            <includes>
                <include>com.infiniteautomation:mango:jar</include>
                <include>com.infiniteautomation.mango:ma-priv</include>
            </includes>
            <excludes>
                <exclude>*:*:jar:javadoc</exclude>
            </excludes>
            <outputDirectory>lib</outputDirectory>
            <useTransitiveDependencies>true</useTransitiveDependencies>
            <useTransitiveFiltering>true</useTransitiveFiltering>
            <useProjectArtifact>false</useProjectArtifact>
        </dependencySet>
        <dependencySet>
            <!-- Core resource zip -->
            <includes>
                <include>com.infiniteautomation:mango:zip:resources</include>
            </includes>
            <unpack>true</unpack>
            <useProjectArtifact>false</useProjectArtifact>
        </dependencySet>
        <dependencySet>
            <includes>
                <include>com.infiniteautomation.mango:ma-bootstrap</include>
            </includes>
            <outputDirectory>boot</outputDirectory>
            <outputFileNameMapping>${artifact.artifactId}${dashClassifier?}.${artifact.extension}</outputFileNameMapping>
            <useTransitiveDependencies>false</useTransitiveDependencies>
            <useProjectArtifact>false</useProjectArtifact>
        </dependencySet>
        <dependencySet>
            <includes>
                <include>com.infiniteautomation:mango:jar:javadoc</include>
            </includes>
            <unpack>true</unpack>
            <outputDirectory>web/apidocs</outputDirectory>
        </dependencySet>
    </dependencySets>
    <fileSets>
        <fileSet>
            <directory>${project.build.directory}/dependency</directory>
            <outputDirectory>boot</outputDirectory>
        </fileSet>
    </fileSets>
</assembly>
